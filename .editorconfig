# Настройки для всех файлов
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Настройки для JavaScript и TypeScript файлов
[*.js]
[*.ts]
indent_style = space
indent_size = 2

# Настройки для CSS и SCSS файлов
[*.css]
[*.scss]
indent_style = space
indent_size = 2
