<section class='authorize-section'>
  <img class='authorize-section__logo' src='{{logoImage}}' />
  <div class='authorize-section__form-container'>
    {{> PageTitle title="Create your account" }}
    <p class='authorize-section__form-decription'>Start chat with your friends today</p>
    {{#> FormBlock}}
      {{> Input class='form__email' type='email' placeholder='Email' name='email' id='reg-email' }}
      {{> Input class='form__login' type='text' placeholder='Login' name='login' id='reg-login' }}
      {{> Input class='form__password' type='password' placeholder='Password' name='password' id='reg-password' }}
      {{> Input class='form__password' type='password' placeholder='Confirm Password' name='confirm_password' id='reg-confirm-password' }}
      {{> Input class='form__name' type='text' placeholder='First Name' name='first_name' id='reg-first-name' }}
      {{> Input class='form__name' type='text' placeholder='Last Name' name='second_name' id='reg-last-name' }}
      {{> termsCheckbox text='I accept' linkText='Terms of Service' }}
      {{> ConfirmButton buttonText='Start' }}
    {{/ FormBlock}}
  </div>
  <div class='authorize-section__image-container'>
    <img src='{{astronautImage}}' alt='astronaut' />
  </div>
</section>
